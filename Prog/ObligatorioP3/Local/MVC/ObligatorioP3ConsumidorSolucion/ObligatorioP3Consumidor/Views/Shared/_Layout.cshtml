<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ObligatorioP3Consumidor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ObligatorioP3Consumidor.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand">[ObligatorioP3 - Segunda Parte]</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*Si hay alguien logueado*@
                        @if (Context.Session.GetString("token") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Movimientos" asp-action="FiltroPorArticuloYtipo" style="background-color:#0d6efd; margin-left:10px;border-radius:15px; color:#fff;">Filtrar por IDs</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Movimientos" asp-action="ListarAgrupados" style="background-color:#0d6efd; margin-left:10px;border-radius:15px; color:#fff;">Movimientos por Año</a>
                             </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Movimientos" asp-action="Create" style="background-color:#0d6efd; margin-left:10px;border-radius:15px; color:#fff;">Registrar Movimientos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Articulos" asp-action="FiltrarArticulosPorFechaMovimiento" style="background-color:#0d6efd; margin-left:10px;border-radius:15px; color:#fff;">Filtrar articulos por fecha movimiento</a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Login" asp-action="CerrarSesion" style="background-color:#0d6efd; margin-left:10px;border-radius:15px; color:#fff;">Cerrar sesion</a>
                            </li>
                        }@*Si no hay alguien logueado*@
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="background-color:#0d6efd; margin-left:10px;border-radius:15px; color:#fff;">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Login" style="background-color:#0d6efd; margin-left:10px;border-radius:15px; color:#fff;">Iniciar sesion</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <partial name="_Mensajes" />
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ObligatorioP3 Segunda Parte - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
